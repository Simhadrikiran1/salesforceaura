<aura:component>
    <aura:attribute name="Name" type="String" access="public" />
    <aura:attribute name="Age" type="Integer" access="public" />
    <aura:attribute name="Salary" type="Integer" access="public" />
      <lightning:card>
        Employee Name = {!v.Name} <br/>
        Employee Age = {!v.Age} <br/>
        Employee Salary = {!v.Salary} <br/>
        <aura:set attribute="actions">
            <lightning:button variant="neutral" label="Submit" title="Submit" onclick='{!c.Submitclick}'></lightning:button>
            <lightning:button variant="destructive" label="Erase" title="Erase" onclick='{!c.Eraseclick}'></lightning:button>
        </aura:set>
       
        
      </lightning:card>
</aura:component>	
